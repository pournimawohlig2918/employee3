<!-- include header -->
<%- include('include/_header') %>
<!--/ include header -->

<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Employees</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Employee</h2>
            <span class="text-light">Use the below form to update an account</span>
        </div>

        <!-- add user form -->
        <!-- form handling -->
        <form method="POST" action="/api/users/<%=user._id%>" id="update_user">
            <div>
                <div class="form-group">
                    <label for="id">User ID</label>
                    <!-- <input type="hidden" name="_id" value=""> -->
                    <input type="text" name="id" value=<%=user.id%> placeholder="eg:1234" autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="hidden" name="_id" value=<%=user._id%>>
                    <input type="text" name="username" value=<%=user.username%> placeholder="JustinBieber29"
                        autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="text" name="password" value=""
                        title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" placeholder="*******" autocomplete="off"
                        oninvalid="this.setCustomValidity('Please enter Password..')"
                        oninput="this.setCustomValidity('')" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="email" value=<%=user.email%> placeholder="example@gmail.com"
                        autocomplete="off">
                </div>
                <div class="form-group">
                    <div class="radio-btn">
                        <div class="salary-lbl">
                            <label for="salary"> Salary </label>
                        </div>
                        <div class="salary-opt">
                            <div class="radio inline" style="margin-right: 10px;">
                                <% if(user.salary == 'Below 5lac' ){ %>

                                <% } else{ %>
                                <input type="radio" id="radio-2" name="salary" value="Below 5lac">

                                <% } %>
                                <label for="radio-2" class="radio-label">
                                    Below 5lac </label>
                            </div>

                            <div class="radio inline"><% if(user.salary == 'Above 5lac' ){ %>

                                <% } else{ %>
                                <input type="radio" id="radio-2" name="salary" value="Above 5lac">

                                <% } %>
                                <input type="radio" id="radio-3" name="salary" value="Above 5lac">
                                <label for="radio-3" class="radio-label"> Above 5lac </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update"> Save </button>
                </div>
            </div>
        </form>
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!--/ include footer -->