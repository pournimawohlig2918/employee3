<!-- form handling -->
<form action="/add-user" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="id">User ID</label>
            <!-- <input type="hidden" name="id" value=""> -->
            <input type="text" name="id" value="" title="Only contains Alphanumeric characters.."
            pattern="^(?=.{4,10}$)(?:[a-zA-Z\d]+(?:(?:\.|-|_)[a-zA-Z\d])*)+$" placeholder="eg:1234"
                autocomplete="off" oninvalid="this.setCustomValidity('Enter User id Here')"
                oninput="this.setCustomValidity('')"
                 required>
        </div>
        <div class="form-group">
            <label for="username">Username</label>
            <!-- <input type="hidden" name="id" value=""> -->
            <input type="text" name="username" value="" title="username must" placeholder="JustinBieber29"
                autocomplete="off" oninvalid="this.setCustomValidity('Enter Username Here')"
                oninput="this.setCustomValidity('')" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="text" name="password" value=""
                title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" placeholder="*******" autocomplete="off"
                oninvalid="this.setCustomValidity('Please enter Password..')" oninput="this.setCustomValidity('')"
                required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" name="email" value="" title="Must contain @ in email format!" pattern="[^ @]*@[^ @]*"
                placeholder="example@gmail.com" autocomplete="off"
                oninvalid="this.setCustomValidity('Please enter an email address..')"
                oninput="this.setCustomValidity('')" required>
        </div>

        <div class="form-group">
            <label for="salary"> Salary </label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="salary" value=" Below 5lac"
                    oninvalid="this.setCustomValidity('Please click Here')" oninput="this.setCustomValidity('')"
                    required>
                <label for="radio-2" class="radio-label">
                    Below 5lac </label> </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="salary" value=" Above 5lac"
                    oninvalid="this.setCustomValidity('Enter click Here')" oninput="this.setCustomValidity('')"
                    required>
                <label for="radio-3" class="radio-label"> Above 5lac </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update"> Save </button>

        </div>
    </div>
</form>